{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    <div class="container container-rtl mx-auto justify-center">
        <a class="btn-primary" href="{{ path('app_home') }}">Reset</a>
        <form action="{{ path('app_game_result') }}" method="post">
            {% set i = 0 %}
            {% for question in questions %}
                <div class="my-20 mx-3 border-1 border border-green-200 dark:border-green-700 my-10 p-10">
                    <div class="card text-center">
                        {{ question.verseToFind.text }}
                    </div>
                    <div class="my-10 p-10">
                        <h3 class="text-center mb-5 text-lg font-medium text-gray-900 dark:text-white">Select the correct answer !</h3>
                        <ul class="grid w-full gap-6 ">
                        {% for verse in question.shuffledAnswers %}
                            <li>
                                <input type="radio" id="verse-{{ verse.number }}" name="verse{{i}}" value="{{ verse.number }}" class="hidden peer" required />
                                <label for="verse-{{ verse.number }}" class="card card-select">
                                    <div class="">
                                        <div class="w-full text-right">{{ verse.text }}</div>
                                    </div>
                                </label>
                            </li>
                        {% endfor %}
                        </ul>
                    </div>
                </div>
                <hr class="w-48 h-1 mx-auto my-4 bg-green-200 border-0 rounded md:my-10 dark:bg-green-700">
                {% set i = i + 1 %}
            {% endfor %}
            <button class="btn-primary" type="submit">My results !</button>
        </form>
    </div>
{% endblock %}
