{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    <div class="container mx-auto flex justify-center">
        {{ form_start(form) }}
        {{ form_label(form.questions, '', {
            'label_attr': {'class': 'w-full ms-2 text-sm font-medium text-gray-900 dark:text-gray-300 text-center'}
        }) }}
        <ul class="my-5 items-center w-full flex text-sm font-medium text-gray-900 bg-white border border-green-200 rounded-lg dark:bg-green-700 dark:border-green-600 dark:text-white">
            {% for question in form.questions %}
                <li class="w-full pr-4">
                    <div class="flex items-center ps-3">
                        {{ form_label(question, '', {
                            'label_attr': {'class': 'w-full py-3 mx-2 text-sm font-medium text-gray-900 dark:text-gray-300'}
                        }) }}
                        {{ form_widget(question) }}
                        {{ form_errors(question) }}
                    </div>
                </li>
            {% endfor %}
        </ul>

        <!-- Modal toggle -->
        <button data-modal-target="default-modal" data-modal-toggle="default-modal" class="btn-primary" type="button">
            Select Chapters
        </button>
        
        <!-- Main modal -->
        <div id="default-modal" tabindex="-1" aria-hidden="true" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
            <div class="relative p-4 w-full max-w-2xl max-h-full">
                <!-- Modal content -->
                <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
                    <!-- Modal header -->
                    <div class="flex items-center justify-between p-4 md:p-5 border-b rounded-t dark:border-gray-600">
                        <h3 class="text-xl font-semibold text-gray-900 dark:text-white">
                            Select chapters
                        </h3>
                        <button type="button" class="btn-primary" data-modal-hide="default-modal">
                            <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
                            </svg>
                            <span class="sr-only">Close</span>
                        </button>
                    </div>
                    <!-- Modal body -->
                    <div class="p-4 md:p-5 space-y-4">

                        <ul class="items-center w-full text-sm font-medium text-gray-900 bg-white border border-gray-200 rounded-lg dark:bg-gray-700 dark:border-gray-600 dark:text-white">
                            {% for chapter in form.chapters %}
                                <li class="w-full border-b border-gray-200 dark:border-gray-600 pr-4">
                                    <div class="flex items-center ps-3">
                                        {{ form_label(chapter, '', {
                                            'label_attr': {'class': 'w-full py-3 ms-2 text-sm font-medium text-gray-900 dark:text-gray-300'}
                                        }) }}
                                        {{ form_widget(chapter) }}
                                        {{ form_errors(chapter) }}
                                    </div>
                                </li>
                            {% endfor %}
                        </ul>
                        
                    </div>
                    <!-- Modal footer -->
                    <div class="flex items-center p-4 md:p-5 border-t border-gray-200 rounded-b dark:border-gray-600">
                        <button data-modal-hide="default-modal" type="button" class="btn-primary">Save</button>
                    </div>
                </div>
            </div>
        </div>

        
        {{ form_end(form) }}
    </div>
{% endblock %}
